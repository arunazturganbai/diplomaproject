<%- include('partials/header', {user: typeof user !== 'undefined' ? user : null}) %>

  <main class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <h1 class="auth-title">Кіру</h1>
      </div>
      
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error"><%= error %></div>
      <% } %>
      
      <form action="/login" method="POST" class="auth-form">
        <div class="form-group">
          <input type="text" name="username" placeholder="Логин" required class="form-input">
          <i class="icon-user"></i>
        </div>
        
        <div class="form-group">
          <input type="password" name="password" placeholder="Құпия сөз" required class="form-input">
          <i class="icon-lock"></i>
        </div>
        
        <button type="submit" class="auth-btn">Кіру</button>
      </form>
      
      <div class="auth-footer">
        <p>Аккаунтыңыз жоқ па? <a href="/register" class="auth-link">Тіркеліңіз</a></p>
      </div>
    </div>
  </main>

<%- include('partials/footer') %>

<style>
  .auth-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: calc(100vh - 120px);
    background-color: #FFF9E6;
    padding: 20px;
  }
  
  .auth-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 33, 55, 0.1);
    width: 100%;
    max-width: 400px;
    padding: 30px;
    border-top: 5px solid #ffda00;
  }
  
  .auth-header {
    text-align: center;
    margin-bottom: 30px;
  }
  
  
  .auth-title {
    color: #002137;
    margin-bottom: 10px;
    font-size: 24px;
  }
  
  .form-group {
    position: relative;
    margin-bottom: 20px;
  }
  
  .form-input {
    width: 100%;
    padding: 12px 15px 12px 40px;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 16px;
    transition: all 0.3s;
  }
  
  .form-input:focus {
    border-color: #ffda00;
    box-shadow: 0 0 0 3px rgba(255, 218, 0, 0.2);
    outline: none;
  }
  
  .icon-user, .icon-lock {
    position: absolute;
    left: 15px;
    top: 50%;
    transform: translateY(-50%);
    color: #002137;
  }
  
  .auth-btn {
    width: 100%;
    padding: 12px;
    background-color: #002137;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 16px;
    cursor: pointer;
    transition: all 0.3s;
    font-weight: bold;
  }
  
  .auth-btn:hover {
    background-color: #003358;
    transform: translateY(-2px);
  }
  
  .auth-footer {
    text-align: center;
    margin-top: 20px;
    color: #666;
  }
  
  .auth-link {
    color: #002137;
    font-weight: bold;
    text-decoration: none;
  }
  
  .auth-link:hover {
    text-decoration: underline;
  }
  
  .alert-error {
    background-color: #ffebee;
    color: #d32f2f;
    padding: 12px;
    border-radius: 6px;
    margin-bottom: 20px;
    border-left: 4px solid #d32f2f;
  }
</style>